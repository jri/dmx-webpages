
.page-message.hint {
    padding: .5em;
    background-color: rgba(255, 198, 0, 0.9);
    color: #333;
    position: absolute;
    right: 1em;
    bottom: 3.5em;
    z-index: 101;
}

.page-message.hint a {
    cursor: pointer;
    text-decoration: underline;
    margin-right: .5em;
}

.page-message.hint a.close {
    float: right;
}